# Backend Environment Configuration
# Copy this file to backend/.env and fill in your values

# Database Configuration
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://elevate_admin:YOUR_PASSWORD@YOUR_RDS_ENDPOINT:5432/elevate_edu

# Security
# Generate with: openssl rand -hex 32
SECRET_KEY=your-secret-key-here-generate-with-openssl-rand-hex-32

# API Settings
API_V1_STR=/api/v1
PROJECT_NAME=Elevate Edu API
VERSION=1.0.0

# CORS Origins (comma-separated)
# Add your CloudFront URL and S3 website URL
BACKEND_CORS_ORIGINS=https://your-cloudfront-url.cloudfront.net,https://your-s3-bucket.s3.amazonaws.com

# Production Settings
DEBUG=False

# Token Expiration
ACCESS_TOKEN_EXPIRE_MINUTES=10080  # 7 days
REFRESH_TOKEN_EXPIRE_DAYS=30

# Optional: Email Configuration
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

