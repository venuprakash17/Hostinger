# Backend Environment Configuration for Hostinger
# Copy this to backend/.env and fill in your values

# Database Configuration (MySQL)
# Format: mysql+pymysql://username:password@host:port/database
DATABASE_URL=mysql+pymysql://elevate_user:YOUR_PASSWORD@localhost:3306/elevate_edu

# Security
# Generate with: openssl rand -hex 32
SECRET_KEY=your-secret-key-here-generate-with-openssl-rand-hex-32

# API Settings
API_V1_STR=/api/v1
PROJECT_NAME=Elevate Edu API
VERSION=1.0.0

# CORS Origins
BACKEND_CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Production Settings
DEBUG=False

# Token Expiration
ACCESS_TOKEN_EXPIRE_MINUTES=10080  # 7 days
REFRESH_TOKEN_EXPIRE_DAYS=30

