# Nginx Configuration for Hostinger
# Copy this to /etc/nginx/sites-available/elevate-edu
# Then: sudo ln -s /etc/nginx/sites-available/elevate-edu /etc/nginx/sites-enabled/

server {
    listen 80;
    server_name yourdomain.com www.yourdomain.com;

    # Backend API
    location /api {
        proxy_pass http://127.0.0.1:8000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # Increase timeouts
        proxy_read_timeout 300s;
        proxy_connect_timeout 75s;
        
        # WebSocket support
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
    }

    # Root directory
    root /var/www/elevate-edu-ui/dist;
    index index.html;

    # Static assets (CSS, JS, images, etc.)
    location /assets/ {
        alias /var/www/elevate-edu-ui/dist/assets/;
        expires 1y;
        add_header Cache-Control "public, immutable";
        access_log off;
    }

    # Frontend (SPA routing)
    location / {
        try_files $uri $uri/ /index.html;
    }

    # Health check
    location /health {
        proxy_pass http://127.0.0.1:8000/health;
        access_log off;
    }
}

