# Backend Production Environment Variables Example
# Copy this to backend/.env.production and fill in your values
# DO NOT commit backend/.env.production to git

# Database Configuration
# Format: postgresql://username:password@host:port/database
# OR for MySQL: mysql+pymysql://username:password@host:port/database
DATABASE_URL=postgresql://elevate_user:YOUR_PASSWORD@postgres:5432/elevate_edu

# Security
# Generate with: openssl rand -hex 32
SECRET_KEY=YOUR_SECRET_KEY_HERE_GENERATE_WITH_OPENSSL_RAND_HEX_32

# API Settings
API_V1_STR=/api/v1
PROJECT_NAME=Elevate Edu API
VERSION=1.0.0

# CORS Origins (comma-separated, no spaces)
BACKEND_CORS_ORIGINS=https://svnaprojob.online,http://svnaprojob.online,https://www.svnaprojob.online,http://www.svnaprojob.online,http://localhost:8080,http://localhost:5173

# Production Settings
DEBUG=False

# Token Expiration
ACCESS_TOKEN_EXPIRE_MINUTES=10080  # 7 days
REFRESH_TOKEN_EXPIRE_DAYS=30

# Email Configuration (Optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# AI Services Configuration (All Optional - Services work without them)
# OpenAI API Key (Optional - for resume optimization and AI interview fallback)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Ollama Configuration (FREE - No API Key Needed)
# Ollama runs locally on the server
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b
OLLAMA_TIMEOUT=180
